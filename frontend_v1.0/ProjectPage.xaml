<Page x:Class="JPMCGenAI_v1._0.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Background="#FAF9F6"
      Title="ProjectPage">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Card Style (White/GOLD Theme) -->
            <Style TargetType="Border" x:Key="ProjectCardStyle">
                <Setter Property="Background" Value="White" />
                <Setter Property="CornerRadius" Value="15" />
                <Setter Property="Margin" Value="12" />
                <Setter Property="Padding" Value="20" />
                <Setter Property="Width" Value="280" />
                <Setter Property="Height" Value="180" />
                <Setter Property="BorderBrush" Value="#E3E1DA" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="Effect">
                    <Setter.Value>
                        <DropShadowEffect Color="#000000" ShadowDepth="2" BlurRadius="10" Opacity="0.15" />
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- Header & Text Styling -->
            <Style TargetType="TextBlock" x:Key="CardTitleStyle">
                <Setter Property="Foreground" Value="#D4AF37" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>
            <Style TargetType="TextBlock" x:Key="CardTypeStyle">
                <Setter Property="Foreground" Value="#8C8575" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="FontStyle" Value="Italic" />
                <Setter Property="Margin" Value="0,0,0,6" />
            </Style>
            <Style TargetType="TextBlock" x:Key="CardDateStyle">
                <Setter Property="Foreground" Value="#A8A190" />
                <Setter Property="FontSize" Value="11" />
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>
            <Style TargetType="TextBlock" x:Key="CardDescriptionStyle">
                <Setter Property="Foreground" Value="#555" />
                <Setter Property="FontSize" Value="12" />
                <Setter Property="TextWrapping" Value="Wrap" />
                <Setter Property="MaxHeight" Value="60" />
            </Style>

            <!-- Rounded Button Style -->
            <Style TargetType="Button" x:Key="CardButtonStyle">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="Cursor" Value="Hand" />
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                    BorderBrush="#D4AF37"
                                    CornerRadius="15">
                                <ContentPresenter />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="BorderThickness" Value="2" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="#FAF9F6">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" Background="White" Padding="30,20" BorderBrush="#E3E1DA" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Text="JPMC - Flux" Foreground="#D4AF37" FontSize="28" FontWeight="Bold" />
                    <TextBlock Text="Select a Project to Begin" Foreground="#8C8575" FontSize="14" Margin="0,5,0,0" />
                </StackPanel>
                <Button Grid.Column="1" Content="Logout" Style="{StaticResource SidebarButtonStyle}" 
                        Click="Logout_Click" Width="228" Background="#D4AF37" Foreground="White"
                        BorderBrush="Transparent" Margin="0,5,0,5" />
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#FAF9F6">
            <StackPanel Margin="30,30,30,30">
                <TextBlock Foreground="#D4AF37" FontSize="24" FontWeight="Bold" Margin="0,0,0,20" 
                           Text="Select a Project to proceed" />

                <ItemsControl ItemsSource="{Binding Projects}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Style="{StaticResource CardButtonStyle}" 
                                    Click="ProjectCard_Click" Tag="{Binding projectid}">
                                <Border Style="{StaticResource ProjectCardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="{Binding title}" Style="{StaticResource CardTitleStyle}" />
                                        <TextBlock Text="{Binding projecttype}" Style="{StaticResource CardTypeStyle}" />
                                        <TextBlock Text="{Binding startdate}" Style="{StaticResource CardDateStyle}" />
                                        <TextBlock Text="{Binding description}" Style="{StaticResource CardDescriptionStyle}" />
                                    </StackPanel>
                                </Border>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
