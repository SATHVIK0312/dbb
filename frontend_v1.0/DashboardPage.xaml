<Page x:Class="JPMCGenAI_v1._0.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Background="#FAF9F6"
      Title="DashboardPage">

    <Page.Resources>

        <!-- Hover Glow Animation for Sidebar Buttons -->
        <Style TargetType="Button" x:Key="SidebarButtonTheme">
            <Setter Property="Background" Value="#FFF6EC"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Width" Value="150"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="BorderBrush" Value="#D4AF37"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="buttonBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Hover Glow Effect -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="buttonBorder" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="12" ShadowDepth="0" Opacity="0.35"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="buttonBorder" Property="Background" Value="#D4AF37"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Active Page Highlight (Gold Underline) -->
        <Style TargetType="Button" x:Key="ActiveSidebarButtonTheme" BasedOn="{StaticResource SidebarButtonTheme}">
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="Foreground" Value="#D4AF37"/>
            <Setter Property="BorderBrush" Value="#D4AF37"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#FFF6EC"
                                BorderBrush="#D4AF37"
                                CornerRadius="10"
                                BorderThickness="0,0,0,3">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Summary Card Style -->
        <Style TargetType="Border" x:Key="SummaryCardStyle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="BorderBrush" Value="#E2E1DC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="18"/>
            <Setter Property="Margin" Value="10,0"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" Opacity="0.15" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Header -->
        <Style TargetType="TextBlock" x:Key="CardHeaderStyle">
            <Setter Property="Foreground" Value="#D4AF37"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
        Background="#F8F6F2"
        BorderBrush="#D4AF37"
        BorderThickness="0,0,2,0"
        CornerRadius="0,18,18,0"
        Padding="0">

            <Border.Effect>
                <DropShadowEffect BlurRadius="18" ShadowDepth="3" Opacity="0.18"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- SIDEBAR TITLE -->
                <Border Background="#D4AF37"
                Padding="18"
                CornerRadius="0,18,0,0">
                    <TextBlock Text="JPMC Flux"
                       Foreground="White"
                       FontSize="22"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
                </Border>

                <!-- NAV BUTTONS -->
                <StackPanel Grid.Row="1" Margin="20 25 20 10">

                    <Button Content=" Project Dashboard"
                    Style="{StaticResource ActiveSidebarButtonTheme}"
                    Margin="0 0 0 12"/>

                    <Button Content="Manage Test Case"
                    Style="{StaticResource SidebarButtonTheme}"
                    Click="UploadTestCase_Click"
                    Margin="0 0 0 12"/>

                    <Button Content="Smart Executor"
                    Style="{StaticResource SidebarButtonTheme}"
                    Click="AITestExecutor_Click"
                    Margin="0 0 0 12"/>

                    <Button Content="Script Generator"
                    Style="{StaticResource SidebarButtonTheme}"
                    Click="ScriptGenerator_Click"
                    Margin="0 0 0 12"/>

                    <Button Content="Execution Log"
                    Style="{StaticResource SidebarButtonTheme}"
                    Click="ExecutionLog_Click"
                    Margin="0 0 0 12"/>
                </StackPanel>

                <!-- PROJECT CARD -->
                <Border Grid.Row="2"
                Margin="15 20"
                Padding="18"
                Style="{StaticResource SummaryCardStyle}"
                CornerRadius="12">

                    <StackPanel>

                        <TextBlock x:Name="ProjectTitleTextBlock"
                           Foreground="#333"
                           FontWeight="Bold"
                           FontSize="20"
                           Margin="0 0 0 5"/>

                        <TextBlock x:Name="ProjectDetailsTextBlock"
                           Foreground="#8C8575"
                           FontSize="11"/>

                        <Button Content="Change Project"
                        Style="{StaticResource SidebarButtonTheme}"
                        Click="ChangeProject_Click"
                        Margin="0 10 0 0"/>

                    </StackPanel>

                </Border>
            </Grid>
        </Border>


        <!-- Main Content -->
        <StackPanel Grid.Column="1" Margin="25">
            <TextBlock Text="Project Dashboard" FontSize="26" FontWeight="Bold" Foreground="#333"/>
            <TextBlock Text="Summary of project metrics and statistics" FontSize="13" Foreground="#8C8575" Margin="0,5,0,25"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <!-- Users -->
                <Border Grid.Column="0" Style="{StaticResource SummaryCardStyle}">
                    <StackPanel>
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#D4AF37"/>
                        <TextBlock Text="Users" Style="{StaticResource CardHeaderStyle}"/>
                        <TextBlock x:Name="UsersCountTextBlock" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Test Cases -->
                <Border Grid.Column="1" Style="{StaticResource SummaryCardStyle}">
                    <StackPanel>
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#D4AF37"/>
                        <TextBlock Text="Test Cases" Style="{StaticResource CardHeaderStyle}"/>
                        <TextBlock x:Name="TestCasesCountTextBlock" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Total Runs -->
                <Border Grid.Column="2" Style="{StaticResource SummaryCardStyle}">
                    <StackPanel>
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#D4AF37"/>
                        <TextBlock Text="Total Runs" Style="{StaticResource CardHeaderStyle}"/>
                        <TextBlock x:Name="TotalExecutionsTextBlock" FontSize="24" FontWeight="Bold"/>
                    </StackPanel>
                </Border>

                <!-- Recent Results -->
                <Border Grid.Column="3" Style="{StaticResource SummaryCardStyle}">
                    <StackPanel>
                        <TextBlock Text="" FontFamily="Segoe MDL2 Assets" FontSize="20" Foreground="#D4AF37"/>
                        <TextBlock Text="Recent Results" Style="{StaticResource CardHeaderStyle}"/>
                        <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                            <TextBlock x:Name="SuccessfulExecutionsTextBlock" Foreground="#52B788" FontSize="14"/>
                            <TextBlock Text=" | " Foreground="#AAA"/>
                            <TextBlock x:Name="FailedExecutionsTextBlock" Foreground="#D9534F" FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
