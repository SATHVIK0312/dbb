<Page x:Class="JPMCGenAI_v1._0.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:jpmc_genai"
      Background="#FAF9F6"
      Title="DashboardPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="240"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Reusable Sidebar -->
        <local:FluxSidebar Grid.Column="0"
                           NavigateCommand="{Binding NavigateCommand}"/>

        <!-- Main Content -->
        <ScrollViewer Grid.Column="1" Margin="30,20,30,20" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <TextBlock Text="Project Dashboard"
                           FontSize="28"
                           FontWeight="Bold"
                           Foreground="#333333"
                           Margin="0,0,0,8"/>

                <TextBlock Text="Summary of project metrics and statistics"
                           FontSize="14"
                           Foreground="#8C8575"
                           Margin="0,0,0,30"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Users -->
                    <Border Grid.Column="0" Background="White" CornerRadius="16" BorderBrush="#E2E1DC" BorderThickness="1"
                            Padding="20" Margin="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" Opacity="0.12" ShadowDepth="3"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Users" FontFamily="Segoe MDL2 Assets" FontSize="28" Foreground="#D4AF37"/>
                            <TextBlock Text="Total Users" Foreground="#D4AF37" FontWeight="SemiBold" FontSize="14" Margin="0,5"/>
                            <TextBlock x:Name="UsersCountTextBlock" Text="—" FontSize="32" FontWeight="Bold" Foreground="#333"/>
                        </StackPanel>
                    </Border>

                    <!-- Test Cases -->
                    <Border Grid.Column="1" Background="White" CornerRadius="16" BorderBrush="#E2E1DC" BorderThickness="1"
                            Padding="20" Margin="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" Opacity="0.12" ShadowDepth="3"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Test Cases" FontFamily="Segoe MDL2 Assets" FontSize="28" Foreground="#D4AF37"/>
                            <TextBlock Text="Total Test Cases" Foreground="#D4AF37" FontWeight="SemiBold" FontSize="14" Margin="0,5"/>
                            <TextBlock x:Name="TestCasesCountTextBlock" Text="—" FontSize="32" FontWeight="Bold" Foreground="#333"/>
                        </StackPanel>
                    </Border>

                    <!-- Total Runs -->
                    <Border Grid.Column="2" Background="White" CornerRadius="16" BorderBrush="#E2E1DC" BorderThickness="1"
                            Padding="20" Margin="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" Opacity="0.12" ShadowDepth="3"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Total Runs" FontFamily="Segoe MDL2 Assets" FontSize="28" Foreground="#D4AF37"/>
                            <TextBlock Text="Execution Count" Foreground="#D4AF37" FontWeight="SemiBold" FontSize="14" Margin="0,5"/>
                            <TextBlock x:Name="TotalExecutionsTextBlock" Text="—" FontSize="32" FontWeight="Bold" Foreground="#333"/>
                        </StackPanel>
                    </Border>

                    <!-- Recent Results -->
                    <Border Grid.Column="3" Background="White" CornerRadius="16" BorderBrush="#E2E1DC" BorderThickness="1"
                            Padding="20" Margin="8">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="12" Opacity="0.12" ShadowDepth="3"/>
                        </Border.Effect>
                        <StackPanel>
                            <TextBlock Text="Recent Results" FontFamily="Segoe MDL2 Assets" FontSize="28" Foreground="#D4AF37"/>
                            <TextBlock Text="Last 30 Days" Foreground="#D4AF37" FontWeight="SemiBold" FontSize="14" Margin="0,5"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                                <TextBlock x:Name="SuccessfulExecutionsTextBlock" Text="0 Passed" Foreground="#52B788" FontSize="18" FontWeight="SemiBold"/>
                                <TextBlock Text="  |  " Foreground="#CCCCCC"/>
                                <TextBlock x:Name="FailedExecutionsTextBlock" Text="0 Failed" Foreground="#E74C3C" FontSize="18" FontWeight="SemiBold"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
