<Window x:Class="JPMCGenAI_v1._0.ReusableMethodViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detected Reusable Methods"
        Height="700" Width="1100"
        Background="Black">

    <Grid Margin="20">

        <DataGrid x:Name="ReusableMethodsGrid"
                  AutoGenerateColumns="False"
                  HeadersVisibility="Column"
                  GridLinesVisibility="None"
                  Background="Black"
                  Foreground="White"
                  RowBackground="Black"
                  AlternatingRowBackground="#111"
                  BorderBrush="Gray"
                  FontSize="14"
                  CanUserAddRows="False"
                  MouseDoubleClick="ReusableMethodsGrid_DoubleClick">

            <DataGrid.Columns>

                <!-- Steps -->
                <DataGridTextColumn Header="Steps"
                                    Binding="{Binding step_label}"
                                    Width="100" />

                <!-- Query (multi-line) -->
                <DataGridTemplateColumn Header="Query" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding step_details}"
                                       TextWrapping="Wrap"
                                       Foreground="White"
                                       FontSize="14"
                                       Margin="5"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <!-- Method name -->
                <DataGridTextColumn Header="method"
                                    Binding="{Binding method_name}"
                                    Width="150" />

            </DataGrid.Columns>

        </DataGrid>
    </Grid>
</Window>
