<Window x:Class="JPMCGenAI_v1._0.TestCaseDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test Case Details"
        Height="850" Width="1100"
        Background="#FAF9F6"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <TextBlock x:Name="TitleLbl"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#D4AF37"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,25"/>

        <!-- INFO -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="16"
                Padding="25"
                BorderBrush="#D4AF37"
                BorderThickness="2"
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- TEST CASE ID -->
                <TextBlock Text="Test Case ID:" FontWeight="SemiBold" Foreground="#8C8575"/>
                <TextBox x:Name="TcIdInput"
                         Grid.Column="1"
                         FontSize="16"
                         Padding="6"
                         Background="#FFF8F0"
                         BorderBrush="#D4AF37"
                         BorderThickness="1"/>

                <!-- DESCRIPTION -->
                <TextBlock Text="Description:" Grid.Row="1" FontWeight="SemiBold" Foreground="#8C8575"/>
                <TextBox x:Name="DescInput"
                         Grid.Row="1" Grid.Column="1"
                         FontSize="16"
                         Padding="6"
                         Background="#FFF8F0"
                         BorderBrush="#D4AF37"
                         BorderThickness="1"/>

                <!-- PRE-REQ TEST ID -->
                <TextBlock Text="Pre-Test ID:" Grid.Row="2" FontWeight="SemiBold" Foreground="#8C8575"/>
                <TextBox x:Name="PreTestIdInput"
                         Grid.Row="2" Grid.Column="1"
                         FontSize="16"
                         Padding="6"
                         Background="#FFF8F0"
                         BorderBrush="#D4AF37"
                         BorderThickness="1"/>

                <!-- PREREQUISITE DESCRIPTION -->
                <TextBlock Text="Prerequisite:" Grid.Row="3" FontWeight="SemiBold" Foreground="#8C8575"/>
                <TextBox x:Name="PrereqInput"
                         Grid.Row="3" Grid.Column="1"
                         Height="80"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         FontSize="15"
                         Padding="8"
                         Background="#FFF8F0"
                         BorderBrush="#D4AF37"/>

                <!-- TAGS -->
                <TextBlock Text="Tags:" Grid.Row="4" FontWeight="SemiBold" Foreground="#8C8575"/>
                <TextBox x:Name="TagsInput"
                         Grid.Row="4" Grid.Column="1"
                         FontSize="15"
                         Padding="6"
                         Background="#FFF8F0"
                         BorderBrush="#D4AF37"/>
            </Grid>
        </Border>

        <!-- STEPS TABLE -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="16"
                Padding="20"
                BorderBrush="#D4AF37"
                BorderThickness="2">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <DataGrid x:Name="StepsDataGrid"
                          AutoGenerateColumns="False"
                          IsReadOnly="True"
                          HeadersVisibility="Column"
                          Background="White"
                          BorderThickness="0"
                          FontSize="14">

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Step No" Binding="{Binding Index}" Width="80"/>
                        <DataGridTextColumn Header="Step Description" Binding="{Binding Description}" Width="3*"/>
                        <DataGridTextColumn Header="Test Data" Binding="{Binding TestDataText}" Width="2*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </ScrollViewer>
        </Border>

        <!-- SAVE -->
        <Button Grid.Row="3"
                Content="Save Changes"
                Width="200"
                Height="45"
                Margin="0,20,0,0"
                HorizontalAlignment="Right"
                Background="#D4AF37"
                Foreground="White"
                FontWeight="Bold"
                Click="SaveChanges_Click"/>
    </Grid>
</Window>
