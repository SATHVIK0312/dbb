<Window x:Class="JPMCGenAI_v1._0.TestCaseDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test Case Details"
        Height="800" Width="1100"
        Background="#FAF9F6"
        WindowStartupLocation="CenterOwner"
        MinHeight="600" MinWidth="900">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- GOLD HEADER -->
        <TextBlock x:Name="TitleLbl"
                   FontSize="32"
                   FontWeight="Bold"
                   Foreground="#D4AF37"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,25"
                   Text="Loading..."/>

        <!-- INFO CARD -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="16"
                Padding="25"
                BorderBrush="#D4AF37"
                BorderThickness="2"
                Margin="0,0,0,30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.2"/>
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Test Case ID:" Foreground="#8C8575" FontWeight="SemiBold" Margin="0,0,0,15"/>
                <TextBlock x:Name="TcIdText" Grid.Column="1" Foreground="#333" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                <TextBlock Text="Description:" Grid.Row="1" Foreground="#8C8575" FontWeight="SemiBold" Margin="0,0,0,15"/>
                <TextBlock x:Name="DescText" Grid.Row="1" Grid.Column="1" Foreground="#333" FontSize="16" TextWrapping="Wrap" MaxWidth="700" Margin="0,0,0,15"/>

                <TextBlock Text="Tags / Pre-reqs:" Grid.Row="2" Foreground="#8C8575" FontWeight="SemiBold" Margin="0,0,0,15"/>
                <TextBlock x:Name="TagsText" Grid.Row="2" Grid.Column="1" Foreground="#D4AF37" FontSize="15" TextWrapping="Wrap" Margin="0,0,0,15"/>

                <TextBlock Text="Status:" Grid.Row="3" Foreground="#8C8575" FontWeight="SemiBold"/>
                <TextBlock x:Name="PrereqText" Grid.Row="3" Grid.Column="1" Foreground="#52B788" FontSize="16" FontWeight="SemiBold"/>
            </Grid>
        </Border>

        <!-- STEPS TABLE â€” NOW FULLY SCROLLABLE & RESPONSIVE -->
        <Border Grid.Row="2"
                Background="White"
                CornerRadius="16"
                BorderBrush="#D4AF37"
                BorderThickness="2"
                Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="4" Opacity="0.2"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Test Steps"
                           Grid.Row="0"
                           Foreground="#D4AF37"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- THIS IS THE KEY: ScrollViewer wraps the entire DataGrid -->
                <ScrollViewer Grid.Row="1"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              CanContentScroll="True">
                    <DataGrid x:Name="StepsDataGrid"
                              AutoGenerateColumns="False"
                              IsReadOnly="True"
                              Background="White"
                              RowHeight="50"
                              FontSize="14"
                              HeadersVisibility="Column"
                              GridLinesVisibility="All"
                              HorizontalGridLinesBrush="#E8E8E8"
                              VerticalGridLinesBrush="#E8E8E8"
                              BorderThickness="0"
                              AlternatingRowBackground="#FFFDF9"
                              RowBackground="White"
                              CanUserResizeRows="False"
                              CanUserResizeColumns="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Step No." Binding="{Binding Index}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#D4AF37"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Step Description" Binding="{Binding Description}" Width="3*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="LineHeight" Value="22"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Test Data / Expected" Binding="{Binding TestDataText}" Width="2*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="Padding" Value="12,8"/>
                                        <Setter Property="Foreground" Value="#8C6E22"/>
                                        <Setter Property="FontStyle" Value="Italic"/>
                                        <Setter Property="LineHeight" Value="20"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
