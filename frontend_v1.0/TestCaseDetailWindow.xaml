<Window x:Class="JPMCGenAI_v1._0.TestCaseDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test Case Details" 
        Height="720" Width="1050"
        Background="White"
        WindowStartupLocation="CenterOwner">

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- GOLD HEADER -->
        <TextBlock x:Name="TitleLbl"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="#D4AF37"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,25"/>

        <!-- INFO CARD -->
        <Border Grid.Row="1"
                Background="White"
                CornerRadius="16"
                Padding="25"
                BorderBrush="#D4AF37"
                BorderThickness="1"
                Margin="0,0,0,30">
            <Border.Effect>
                <DropShadowEffect BlurRadius="18"
                                  ShadowDepth="3"
                                  Opacity="0.18"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- LABELS -->
                <TextBlock Text="Test Case ID:"
                           Foreground="#8C8575"
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"/>
                <TextBlock x:Name="TcIdText"
                           Grid.Column="1"
                           Foreground="#333"
                           FontSize="17"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Description:"
                           Grid.Row="1"
                           Foreground="#8C8575"
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"/>
                <TextBlock x:Name="DescText"
                           Grid.Row="1"
                           Grid.Column="1"
                           Foreground="#333"
                           FontSize="16"
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Tags / Pre-reqs:"
                           Grid.Row="2"
                           Foreground="#8C8575"
                           FontWeight="SemiBold"
                           Margin="0,0,0,15"/>
                <TextBlock x:Name="TagsText"
                           Grid.Row="2"
                           Grid.Column="1"
                           Foreground="#D4AF37"
                           FontSize="15"
                           Margin="0,0,0,15"/>

                <TextBlock Text="Status:"
                           Grid.Row="3"
                           Foreground="#8C8575"
                           FontWeight="SemiBold"/>
                <TextBlock x:Name="PrereqText"
                           Grid.Row="3"
                           Grid.Column="1"
                           Foreground="#D4AF37"
                           FontSize="15"/>
            </Grid>
        </Border>

        <!-- STEPS TABLE CARD -->
        <!-- STEPS TABLE CARD -->
        <Border Grid.Row="2"
        Background="White"
        CornerRadius="16"
        Padding="20"
        BorderBrush="#D4AF37"
        BorderThickness="1">
            <Border.Effect>
                <DropShadowEffect BlurRadius="18"
                          ShadowDepth="3"
                          Opacity="0.18"/>
            </Border.Effect>

            <StackPanel>
                <TextBlock Text="Test Steps"
                   Foreground="#D4AF37"
                   FontSize="24"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

                <!-- SCROLLABLE AREA -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled"
                      Height="350">
                    <!-- adjust as needed -->

                    <DataGrid x:Name="StepsDataGrid"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      Background="White"
                      Foreground="#333"
                      GridLinesVisibility="All"
                      HorizontalGridLinesBrush="#E0E0E0"
                      VerticalGridLinesBrush="#E0E0E0"
                      BorderBrush="#D4AF37"
                      BorderThickness="1.2"
                      FontSize="15"
                      CanUserResizeRows="False"
                      AlternatingRowBackground="#FAF8F2">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Step No." Binding="{Binding Index}" Width="100">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="FontWeight" Value="Bold"/>
                                        <Setter Property="Foreground" Value="#D4AF37"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Step Description" Binding="{Binding Description}" Width="2*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="TextWrapping" Value="Wrap"/>
                                        <Setter Property="Padding" Value="8"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                            <DataGridTextColumn Header="Test Data / Expected" Binding="{Binding TestDataText}" Width="*">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="#8C6E22"/>
                                        <Setter Property="FontStyle" Value="Italic"/>
                                        <Setter Property="Padding" Value="8"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>

                        </DataGrid.Columns>
                    </DataGrid>

                </ScrollViewer>
            </StackPanel>
        </Border>

    </Grid>
</Window>
