<Window x:Class="JPMCGenAI_v1._0.TestPlanEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Test Plan"
        Width="900" Height="550"
        Background="#FAF9F6"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize">

    <Window.Resources>

        <!-- Gold Theme Button -->
        <Style TargetType="Button" x:Key="DialogButtonStyle">
            <Setter Property="Background" Value="#D4AF37"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="#D4AF37"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="btn"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="btn" Property="Background" Value="#E5C46E"/>
                                <Setter TargetName="btn" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="10" Opacity="0.3"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="btn" Property="Background" Value="#C49B2E"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Section Header -->
        <Style TargetType="TextBlock" x:Key="DialogHeader">
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="FontFamily" Value="Segoe UI"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#333"/>
        </Style>

    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Review &amp; Edit Test Data Before Execution"
                   Style="{StaticResource DialogHeader}"
                   Margin="0,0,0,10"/>

        <!-- Editable Data Table -->
        <DataGrid x:Name="TestPlanGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="0,5,0,10"
                  Background="White"
                  BorderBrush="#E2E1DC"
                  BorderThickness="1"
                  Foreground="#333"
                  FontFamily="Segoe UI">

            <DataGrid.Columns>
                <!-- 1. Global Serial Number (Leftmost) -->
                <DataGridTextColumn Header="#" 
                        Binding="{Binding GlobalRowNumber}" 
                        IsReadOnly="True" 
                        Width="50">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- 2. TestCase ID -->
                <DataGridTextColumn Header="TestCase ID" 
                        Binding="{Binding TestCaseId}" 
                        IsReadOnly="True" 
                        Width="150"/>

                <!-- 3. Step Number (per TestCase) -->
                <DataGridTextColumn Header="Step #" 
                        Binding="{Binding StepNumber}" 
                        IsReadOnly="True" 
                        Width="70">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment" Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                            <Setter Property="Foreground" Value="#D4AF37"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <!-- Existing columns -->
                <DataGridTextColumn Header="Step" Binding="{Binding Step}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Test Data" Binding="{Binding TestData}" Width="300"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Skip Editing" Style="{StaticResource DialogButtonStyle}" Click="SkipButton_Click"/>
            <Button Content="Cancel" Style="{StaticResource DialogButtonStyle}" Click="CancelButton_Click"/>
            <Button Content="Continue" Style="{StaticResource DialogButtonStyle}" Click="ContinueButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
