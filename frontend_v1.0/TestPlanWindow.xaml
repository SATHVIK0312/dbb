<Window x:Class="JPMCGenAI_v1._0.TestPlanWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Test Plan Editor" Height="600" Width="800"
        Background="Black"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style TargetType="DataGrid" BasedOn="{StaticResource {x:Type DataGrid}}">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="Black" />
                <Setter Property="BorderBrush" Value="White" />
                <Setter Property="BorderThickness" Value="1" />
                <Setter Property="RowBackground" Value="Transparent" />
                <Setter Property="AlternatingRowBackground" Value="#222222" />
                <Setter Property="AutoGenerateColumns" Value="False" />
                <Setter Property="CanUserAddRows" Value="True" />
                <Setter Property="CanUserDeleteRows" Value="True" />
                <Setter Property="GridLinesVisibility" Value="All" />
            </Style>
            <Style TargetType="DataGridCell">
                <Setter Property="Background" Value="Transparent" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="BorderBrush" Value="White" />
            </Style>
            <Style TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="#222222" />
                <Setter Property="Foreground" Value="White" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="BorderBrush" Value="White" />
                <Setter Property="BorderThickness" Value="0,0,1,1" />
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Test Plan Editor" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" />
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Current Test ID" Foreground="White" FontSize="14" Margin="0,0,0,5" />
                <TextBox x:Name="CurrentTestIdTextBox" IsReadOnly="True" />
                <TextBlock Text="Pretest ID Steps" Foreground="White" FontSize="14" Margin="0,10,0,5" />
                <DataGrid x:Name="PretestStepsDataGrid" Height="150" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Pretest ID" Binding="{Binding PretestId}" Width="100" />
                        <DataGridTextColumn Header="Step" Binding="{Binding Step}" Width="*" />
                        <DataGridTextColumn Header="Test Data" Binding="{Binding TestData}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock Text="Pretest ID Scripts" Foreground="White" FontSize="14" Margin="0,10,0,5" />
                <DataGrid x:Name="PretestScriptsDataGrid" Height="100" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Pretest ID" Binding="{Binding PretestId}" Width="100" />
                        <DataGridTextColumn Header="Script" Binding="{Binding Script}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock Text="Current BDD Steps" Foreground="White" FontSize="14" Margin="0,10,0,5" />
                <DataGrid x:Name="CurrentBddStepsDataGrid" Height="150" AutoGenerateColumns="False" CanUserAddRows="True" CanUserDeleteRows="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Step" Binding="{Binding Step}" Width="*" />
                        <DataGridTextColumn Header="Test Data" Binding="{Binding TestData}" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button Content="Save" Click="SaveButton_Click" Margin="0,0,10,0" />
                <Button Content="Cancel" Click="CancelButton_Click" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
