<Window x:Class="JPMCGenAI_v1._0.NormalizePreviewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Normalized Steps Review"
        Height="650" Width="1100"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Testcase selector -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <TextBlock Text="Select Test Case:" VerticalAlignment="Center" Margin="0 0 10 0" FontWeight="Bold"/>
            <!-- Added proper ComboBox styling and error state handling -->
            <ComboBox x:Name="TestCaseSelector"
                      Width="300"
                      SelectionChanged="TestCaseSelector_SelectionChanged"
                      Padding="5"/>
        </StackPanel>

        <!-- Two-column step comparison -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Original Steps -->
            <GroupBox Header="Original Steps" Margin="0 0 5 0">
                <DataGrid x:Name="OriginalGrid"
                          IsReadOnly="True"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          BorderThickness="1"
                          BorderBrush="#CCCCCC">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Index, UpdateSourceTrigger=PropertyChanged}" Width="50" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Step" Binding="{Binding Step, UpdateSourceTrigger=PropertyChanged}" Width="*" IsReadOnly="True"/>
                        <DataGridTextColumn Header="Data" Binding="{Binding TestDataText, UpdateSourceTrigger=PropertyChanged}" Width="200" IsReadOnly="True"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

            <!-- Normalized Steps (Editable) -->
            <GroupBox Header="Normalized Steps" Grid.Column="1" Margin="5 0 0 0">
                <DataGrid x:Name="NormalizedGrid"
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          BorderThickness="1"
                          BorderBrush="#CCCCCC">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="#" Binding="{Binding Index, UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True" Width="50"/>
                        <!-- Added UpdateSourceTrigger for proper two-way data binding -->
                        <DataGridTextColumn Header="Step" Binding="{Binding Step, UpdateSourceTrigger=PropertyChanged}" Width="*"/>
                        <DataGridTextColumn Header="Data" Binding="{Binding TestDataText, UpdateSourceTrigger=PropertyChanged}" Width="200"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>

        </Grid>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="Cancel" Width="120" Margin="5" Click="Cancel_Click" Background="#F0F0F0" Padding="5"/>
            <Button Content="Save" Width="140" Margin="5" Click="Save_Click" Background="#4CAF50" Foreground="White" Padding="5"/>
        </StackPanel>

    </Grid>
</Window>
